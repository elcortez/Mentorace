<div class="container center">
  <p class='exercise_title'>
    Exercise NÂ°<%= @exercise.position_in_lesson %>
  </p>

  <p>
    <span class='flash_success'> <%= flash[:success] unless flash[:success].blank? %> </span>
    <span class='flash_error'> <%= flash[:error] unless flash[:error].blank? %> </span>
  </p>

  <p>
    <%= @exercise.question_en %>
  </p>
  <br>

  <%= simple_form_for [:course, :chapter, :lesson, @exercise, @attempt] do |f| %>
    <% if [:false, :true].include?(@exercise.answer.to_sym) %>

      <%= f.input :attempted_answer,
        as: :radio_buttons,
        collection: [:true, :false]
      %>
    <% else %>

      <%= f.input :attempted_answer %>
    <% end %>

    <%= f.input :exercise_id, as: :hidden, input_html: { value: @exercise.id } %>
    <br><br>

    <%= f.button :submit %>
  <% end %>
</div>
